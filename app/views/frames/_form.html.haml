= form_for @frame do |f|
  - if @frame.errors.any?
    #error_explanation
      %h2= "#{pluralize(@frame.errors.count, "error")} prohibited this frame from being saved:"
      %ul
        - @frame.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :brand
    = collection_select :frame, :brand_id, Brand.all, :id, :name
  .actions
    = f.submit 'Save'
